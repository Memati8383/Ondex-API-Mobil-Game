<?xml version="1.0" encoding="utf-8"?>
<!-- Ana Layout - Dikey LinearLayout olarak tanımlandı -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafbfc"
    android:orientation="vertical">

    <!-- YATAY KAYDIRILABİLİR MENÜ BÖLÜMÜ -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:scrollbars="none">

        <!-- MENÜ BUTONLARINI İÇEREN LAYOUT -->
        <LinearLayout
            android:id="@+id/menuLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:fitsSystemWindows="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp"
            android:paddingTop="?android:attr/actionBarSize">

            <!-- TC SORGULA BUTONU -->
            <Button
                android:id="@+id/btnMenuApi1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_grey"
                android:text="TC"
                android:textColor="#28313b" />

            <!-- BUTONLAR ARASI BOŞLUK -->
            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- AD-SOYAD SORGULA BUTONU -->
            <Button
                android:id="@+id/btnMenuApi2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_grey"
                android:text="Ad - Soyad"
                android:textColor="#28313b" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- ADRES SORGULA BUTONU -->
            <Button
                android:id="@+id/btnMenuApi3"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_grey"
                android:text="Adres Sorgu"
                android:textColor="#28313b" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- HANE SORGULA BUTONU -->
            <Button
                android:id="@+id/btnMenuApi4"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_grey"
                android:text="Hane Sorgu"
                android:textColor="#28313b" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- APARTMAN SORGULA BUTONU -->
            <Button
                android:id="@+id/btnMenuApi5"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_grey"
                android:text="Apartman Sorgu"
                android:textColor="#28313b" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- SOKAK SORGULA BUTONU -->
